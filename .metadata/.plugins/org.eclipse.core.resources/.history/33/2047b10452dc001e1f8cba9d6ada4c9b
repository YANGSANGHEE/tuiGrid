	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<link rel="stylesheet" href="/css/reset.css">
<link rel="stylesheet" href="/css/mdi-style.css">
<link rel="stylesheet" href="/css/tui-grid.css">
<link rel="stylesheet" href="/css/tui-pagination.css">
<link rel="stylesheet" href="/css/sub-style.css">
<title>게시판 작성</title>
</head>
<body>
	<section class="sub-page">
		<div class="s__container">
			<div class="s__row">
				<form name="form1">
					<div>
						<span>작성자</span><input type="text" name="userNm" value="<c:out value = "${data.USER_NM}"/>"/>
					</div>
					<div>
						<span>작성자명</span><input type="text" name="userId" value="<c:out value = "${data.USER_ID}"/>"/>
					</div>
					<div>
						<span>제목</span><input type="text" name="title" value="<c:out value = "${data.TITLE}"/>"/>
					</div>
					<div style="display:flex; align-items: center">
						<span>내용</span>
						<textarea style="width:500px; height:500px;" id="txtArea" name="content"></textarea>
					</div>
				</form>
				<button id="updateBtn"
					style="background: black; color: white; width: 100px;"
					type="button"></button>
				<button id="listBtn"
					style="background: black; color: white; width: 100px;">목록</button>
			</div>
		</div>
	</section>
	<script src="/js/jquery-1.9.1.js"></script>
	<script>
	  $(document).ready(function(){
 			let seq = '<c:out value="${data.SEQ}"/>';
			let content = '<c:out value ="${data.CONTENT}"/>'	
		    let info;
			
			let updateBtn = document.getElementById("updateBtn");
	        let listBtn= document.getElementById("listBtn");
	       	let textArea = document.getElementById("txtArea");
	       	
	       	textArea.append(content);
	       	
	        if(seq > 0){
	        	info = "수정";
	        	updateBtn.textContent = "수정";
	        }else{
	        	info = "작성";
	        	updateBtn.textContent = "작성";
	        }

	        //수정 버튼 클릭시
	        updateBtn.addEventListener("click",function(){
	        	let form = document.form1;
	        	let userNm = form.userNm.value;
	        	let userId = form.userId.value;
	        	let title = form.title.value;
	        	let content = form.content.value;	        	
	        	
	        	let sendData = {
	        		"userNm" : userNm,
	        		"userId" : userId,
	        		"title" : title,
	        		"content" : content,
	        		"seq" : seq
	        	}
	        	
	        	if(userNm == null || userNm == ""){
	        		alert("작성자를 입력해주세요.");
	        		return false;
	        	}else if(userId == null || userId == ""){
	        		alert("작성자명을 입력해주세요.");
	        		return false;
	        	}else if(title == null || title == ""){
	        		alert("제목을 입력해주세요.");
	        		return false;
	        	}else if(content == null || content == ""){
	        		alert("내용을 입력해주세요.");
	        		return false;
	        	}
	        	
	        	$.ajax({
	        		url:"/board/mergeBoard",
	        		type:"post",
	        		data:sendData,
	        		success : function(data){
	        			if(data>0){
	        				alert(info+"를 완료하였습니다.");
	        			}
	        		}
	        	})
	        });
	        
	        //목록버튼
	        listBtn.addEventListener("click",()=>{
	        	location.href="/board/viewBoardList";
	        }); 
	  });
</script>
</body>
</html>